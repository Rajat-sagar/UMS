@model IEnumerable<UMSDemo.Models.Account>

@{
    ViewBag.Title = "Index";
    if (Session["userID"] == null)          // if user is not logged in ....blocking unauthorized request
    {
        Response.Redirect("~/Login/Index");
    }
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DueFee)
        </th>
        <th>Actions</th>



    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RegistrationNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Student.Name)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.DueFee)
    </td>
    <td>

        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>


</tr>
    }

</table>
<p>
    @Html.ActionLink("Back", "Index", "Home")
</p>
